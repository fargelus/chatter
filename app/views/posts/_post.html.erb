<div id="<%= dom_id post %>">
  <p>
    <strong>Username:</strong>
    <%= post.username %>
  </p>

  <p>
    <strong>Body:</strong>
    <%= post.body %>
  </p>

  <p>
    <strong>Likes count:</strong>
    <%= post.likes_count %>
  </p>

  <p>
    <strong>Reposts count:</strong>
    <%= post.reposts_count %>
  </p>

</div>
